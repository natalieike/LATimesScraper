<div class="container container-body">

	{{#each articleObj}}
		<div class="panel">
			<div class="panel-heading lightBlueStyle">
				<a href = "www.latimes.com{{link}}">{{headline}}</a>
			</div> <!--/.panel-heading-->
			<div class="panel-body">
				<p>{{slug}}</p>
				<p>Section: {{section}}</p>
				<p>Time Scraped: {{time}}</p>
				<button type="button" class="btn btn-primary showBtn" data_value="{{_id}}">Show {{commentsLength}} Comments</button>
				<div class="hidden" id="{{_id}}">
					{{#each comments}}
						<div>
							<p>{{commentText}}</p>
							<p>User: {{commentUser}}</p>
							<p>Time: {{commentTime}}</p>
						</div>
					{{/each}}
				</div> <!--/.hidden-->
				<hr>
				<form action="/comments/{{_id}}?_method=POST" method="POST">
					<textarea class="form-control" rows="3" name="commentText" placeholder="Comment"></textarea>
					<input type="text" name="commentUser" placeholder="User Name">
					<button type="submit" class="btn btn-primary">Add Comment</button>
				</form>
			</div> <!--/.panel-body-->
		</div> <!--/.panel-->
	{{/each}}

</div> <!--/.container-->